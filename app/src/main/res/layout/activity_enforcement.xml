<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.dog.manage.zhifa.app.view.TitleView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/colorAppTheme"
            app:tv_content=""
            app:tv_content_size="@dimen/sp_14"
            app:tv_title="执法拍照"
            app:tv_title_bold="true"
            app:tv_title_size="@dimen/titleViewSize" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginRight="@dimen/dp_37"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.dog.manage.zhifa.app.view.TextBoldView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:text="1查询犬只信息"
                    android:textColor="#ff273154"
                    android:textSize="@dimen/sp_17" />

                <com.dog.manage.zhifa.app.view.TextBoldView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="—————根据犬只鼻纹查询—————"
                    android:textColor="#ff273154"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_45"
                    android:background="@drawable/button_theme"
                    android:gravity="center"
                    android:onClick="onClickSearchPetArchives"
                    android:text="鼻纹识别扫描查询"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_15" />

                <com.dog.manage.zhifa.app.view.TextBoldView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="—————根据犬主信息查询—————"
                    android:textColor="#ff273154"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_28"
                    android:background="@drawable/button_stroke_gray_100"
                    android:gravity="center_vertical"
                    android:hint="输入姓名/单位名称"
                    android:maxLength="16"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:textSize="@dimen/sp_15"
                    android:visibility="gone"/>


                <com.dog.manage.zhifa.app.view.TextBoldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_28"
                    android:text="查询方式一"
                    android:textColor="#ff273154"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/button_stroke_gray_100"
                    android:gravity="center_vertical"
                    android:hint="输入绑定手机号码"
                    android:inputType="phone"
                    android:maxLength="16"
                    android:paddingLeft="@dimen/dp_30"
                    android:paddingRight="@dimen/dp_30"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:textSize="@dimen/sp_15" />

                <com.dog.manage.zhifa.app.view.TextBoldView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:text="查询方式二"
                    android:textColor="#ff273154"
                    android:textSize="@dimen/sp_15" />

                <EditText
                    android:id="@+id/idNumEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@drawable/button_stroke_gray_100"
                    android:gravity="center_vertical"
                    android:hint="输入身份证号码/统一社会信用代码"
                    android:minHeight="@dimen/dp_48"
                    android:paddingLeft="@dimen/dp_30"
                    android:text=""
                    android:textColor="#000000"
                    android:textColorHint="#666666"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_24"
                    android:background="@drawable/button_green"
                    android:gravity="center"
                    android:onClick="onClickSearchDogUser"
                    android:text="查询"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>