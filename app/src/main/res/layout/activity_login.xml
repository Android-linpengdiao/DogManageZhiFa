<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".activity.LoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_46"
                android:layout_height="@dimen/dp_46"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_4"
                android:onClick="onClickBack"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_close_b"
                app:tint="@color/black" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:text="账号登录"
            android:textColor="#ff273154"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@drawable/button_stroke_gray_100"
            android:gravity="center"
            android:hint="请输入账号"
            android:maxLength="16"
            android:minHeight="@dimen/dp_56"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@drawable/button_stroke_gray_100"
            android:gravity="center"
            android:hint="请输入密码"
            android:maxLength="16"
            android:minHeight="@dimen/dp_56"
            android:paddingLeft="@dimen/dp_27"
            android:paddingRight="@dimen/dp_27"
            android:text=""
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_35"
            android:background="@drawable/button_theme"
            android:gravity="center"
            android:onClick="onClickLogin"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/checkView"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:padding="@dimen/dp_10"
                android:src="@drawable/selected" />

            <TextView
                android:id="@+id/privacyView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="登录代表同意《用户协议》《隐私政策》"
                android:textColor="#999999"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:paddingBottom="@dimen/dp_20"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>
</layout>