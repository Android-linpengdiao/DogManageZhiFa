<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/viewPadding"
        android:layout_marginRight="@dimen/viewPadding"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_2"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_15">

            <com.dog.manage.zhifa.app.view.TextBoldView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="处罚记录-"
                android:textColor="#333333"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/illegalTypeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:layout_weight="1"
                android:text="违法类型:"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/illegalMeasureView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_weight="1"
                android:text="处罚措施:"
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/illegalTimeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_weight="1"
                android:text="处罚时间: "
                android:textColor="#999999"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>